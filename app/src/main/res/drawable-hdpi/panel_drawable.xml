<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/externalBorderColor"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:right="1dp" android:left="1dp" android:bottom="1dp" android:top="0dp" >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/internalBorderColor"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:right="2dp" android:left="2dp" android:bottom="2dp" android:top="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/foregroundColor"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>


</layer-list>