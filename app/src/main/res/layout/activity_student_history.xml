<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:id="@+id/drawer"
    >







    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/item_list"
            android:name="it.polito.mobile.temporaryjobplacement.pstudent.fragments.ApplicationListFragment"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            tools:layout="@android:layout/list_content"

            />

        <!--All'interno del layout di questa activity viene avviato un fragment in maniera statica: ItemListFragment
        Il fragment ha all'interno il layout di lista di default layout/list_content-->


    </LinearLayout>


    <!-- The navigation drawer -->
    <include layout="@layout/drawer_layout" />"


</android.support.v4.widget.DrawerLayout>
