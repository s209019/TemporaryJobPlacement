<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="WEB DEVELOPER"
            android:textColor="@color/labelTextColor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/positionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:text="Full Time"
            android:textColor="@color/grayDarkerTextColor"
            android:textSize="@dimen/abc_text_size_small_material"
            android:padding="3dp"
            android:textStyle="italic"/>

        <LinearLayout
            android:id="@+id/company_location_layout"
            android:layout_below="@+id/positionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:src="@drawable/ic_action_group"
                />

            <TextView
                android:id="@+id/companyTextView"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTextView"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="ACCENTURE CONSULTING SRL BLABLA"
                android:textColor="@color/grayDarkerTextColor"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Â· "
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:src="@drawable/ic_action_place"/>

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_below="@id/nameTextView"
                android:layout_gravity="top"
                android:text="TURIN (ITALY)"
                android:textColor="@color/grayDarkerTextColor"
                android:textSize="@dimen/abc_text_size_small_material" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:layout_below="@+id/company_location_layout"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_time"/>

            <TextView
                android:id="@+id/timeAgoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 days ago"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/grayDarkerTextColor"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>


    </RelativeLayout>


    <ImageButton
        android:id="@+id/innerButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/ic_action_not_important"/>






</LinearLayout>
